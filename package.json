  "devDependencies": {
    "autoprefixer": "^10.4.7",
    "cypress": "^9.6.1",
    "eslint": "8.16.0",
    "eslint-config-next": "12.1.6",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^12.3.7",
    "postcss": "^8.4.14",
    "prettier": "2.6.2",
    "tailwindcss": "^3.0.24"
  },
  "lint-staged": {
    "*.{json,js,ts,jsx,tsx,html,css}": [
      "prettier --write"
