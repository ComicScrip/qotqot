  "dependencies": {
    "airtable": "^0.11.4",
    "argon2": "^0.28.5",
    "axios": "^0.27.2",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "dayjs": "^1.11.3",
    "dotenv": "^16.0.1",
    "joi": "^17.6.0",
    "moment": "^2.29.3",
    "morgan": "^1.10.0",
    "next": "12.1.6",
    "next-auth": "^4.3.4",
    "next-connect": "^0.12.2",
    "nodemailer": "^6.7.5",
    "npm-run-all": "^4.1.5",
    "react": "18.1.0",
    "react-dom": "18.1.0"
